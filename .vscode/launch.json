{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch fitlog",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dist/fitlog.exe",
            "args": ["show", "--date", "2025-09-11"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            // --- THE FIX IS HERE ---
            // This tells the debugger where to find its necessary DLL files.
            "environment": [
                {
                    "name": "Path",
                    "value": "C:/msys64/mingw64/ucrt64/bin;${env:Path}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build fitlog"
        }
    ]
}

